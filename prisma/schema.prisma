// prisma/schema.prisma
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Subscription {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  createdAt DateTime @default(now())
}

model ContactForm {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  jobTitle    String
  companyName String
  email       String
  phone       String
  country     String
  message     String
  createdAt   DateTime @default(now())
}